	  <!-- Material Icons: https://material.io/tools/icons/?icon=create&style=round -->
	  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
	  <link href="./styles.css" rel="stylesheet">
  </head>
  <body>
    <p id="btData" style="display: none;"></p>
    <p id="btAdmins" style="display: none;"></p>
    <div id="signin-popup">
      <div id="signin-box">
        <div onclick="sbToggle(0)" id="signin-header"><i class="material-icons">clear</i></div>
        <div id="signin-info">
          <h3>Sign In</h3>
          <input id="username" placeholder="Username"><br />
          <input id="email" type="email" placeholder="Email Address"><br />
          <input id="password" type="password" placeholder="Password"><br />
          <button id="signin-button" class="btButton">Sign in</button>
          <button id="signup-button" onclick="signUp()" class="btButton">Sign up</button>
          <span id="signup-toggle" onclick="siToggle(1)">Don't have an account?<br><a>Sign up</a></span>
          <span id="signin-toggle" onclick="siToggle(0)">Already have an account?<br><a>Sign in</a></span>
        </div>
      </div>
    </div>
    <div id="page">
      <h2>BibleThoughts</h2>
      <button id="signinButton" onclick="sbToggle(1);" class="btButton">Sign In</button><h4 id="greeting">Welcome, user!</h4>
      <div id="header">
         : <a>All</a>
         : <a>Anna</a>
         : <a>Caleb</a>
         : <a>Daniel</a>
         : <a>Jordan</a>
         : <a>Molly</a>
         : <a>Noah</a>
         :
      </div>
      <div id="posts">
        <h3 style="display: none; font-style: italic;">Loading posts...</h3>
      </div>
    </div>
  </body>
</html>
